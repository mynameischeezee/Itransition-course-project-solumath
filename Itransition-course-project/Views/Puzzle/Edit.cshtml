@model Itransition_course_project.Models.Post

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control rounded-pill" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="TopicId" class="control-label">Topic</label>
                    <select class="form-control custom-select rounded-pill" id="inputGroupSelect01" asp-for="TopicId" asp-items="ViewBag.TopicId"></select>
                </div>
            </div>
            @{
                if (this.User.IsInRole("Admin"))
                {
                    <div class="form-group">
                        <label asp-for="CreatedByUserId" class="control-label"></label>
                        <select asp-for="CreatedByUserId" class="form-control" id="inputGroupSelect01" asp-items="ViewBag.CreatedByUserId"></select>
                        <span asp-validation-for="CreatedByUserId" class="text-danger"></span>
                    </div>
                }
            }
            <div class="form-group" type="hidden">
                <input asp-for="DateCreated" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <input asp-for="ImageUrl1" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile1" class="control-label"></label>
                <input asp-for="ImageFile1" type="file" class="form-control"/>
                <span asp-validation-for="ImageFile1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ImageStorageName1" class="form-control" type="hidden"/>
            </div>
            
            <div class="form-group">
                <input asp-for="ImageUrl2" class="form-control" type="hidden"/>
                </div>
            <div class="form-group">
                <label asp-for="ImageFile2" class="control-label"></label>
                <input asp-for="ImageFile2" class="form-control" />
                <span asp-validation-for="ImageFile2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ImageStorageName2" class="form-control" type="hidden"/>
            </div>
            
            <div class="form-group">
                <input asp-for="ImageUrl3" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile3" class="control-label"></label>
                <input asp-for="ImageFile3" class="form-control"/>
                <span asp-validation-for="ImageFile3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ImageStorageName3" class="form-control" type="hidden"/>
            </div>
            
            <div class="form-group">
                <label asp-for="PostText" class="control-label"></label>
                <textarea asp-for="PostText" class="form-control" rows="4"></textarea>
                <span asp-validation-for="PostText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer1" class="control-label"></label>
                <input asp-for="Answer1" class="form-control rounded-pill"/>
                <span asp-validation-for="Answer1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer2" class="control-label"></label>
                <input asp-for="Answer2" class="form-control rounded-pill"/>
                <span asp-validation-for="Answer2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer3" class="control-label"></label>
                <input asp-for="Answer3" class="form-control rounded-pill"/>
                <span asp-validation-for="Answer3" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

