@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <img src="~/Media/loginpic.svg" alt="loginpic" class="img-fluid"/>
            <p class="mb-0 text-center">Mathematics knows no races or geographic boundaries; for mathematics, the cultural world is one country.</p>
            <footer class="blockquote-footer text-center">From solumath team inspired by <cite title="Source Title">David Hilbert</cite></footer>
        </div>
        <div class="col-sm-6">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <section>
                <form id="account" method="post">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-outline-primary rounded-pill">Log in</button>
                    </div>
                    <div class="form-group text-center">
                        <p>
                            <a style="font-size: 90%" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a style="font-size: 90%"  asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a style="font-size: 90%"  id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>
                                     <section>
                                             @{
                                                 if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                                                        {
                                            
                                                                        }
                                                                        else
                                                                        {
                                                                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal text-center">
                                                                                <div>
                                                                                    <p>
                                                                                        @foreach (var provider in Model.ExternalLogins)
                                                                                        {
                                                                                            if (provider.DisplayName == "Google")
                                                                                            {   
                                                                                                <button type="submit" class="btn btn-outline-primary rounded-pill" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">Sign in via <i class="bi bi-google"></i></button>
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                                                            }
                                                                                            
                                                                                        }
                                                                                    </p>
                                                                                </div>
                                                                            </form>
                                                                        }
                                                                    }
                                        </section>
            </section>
        </div>
    </div>
</div>
